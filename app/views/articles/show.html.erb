<h2><%= @article.title %></h2>
<p><%= @article.content %></p>
<ul>
   <li> 
      <%= link_to article_path(@article),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt"></i>
        <% end %>
    </li> 

    <li>
        <%= link_to edit_article_path do %>
          <i class="fas fa-edit"></i>
        <% end %>
    </li> 

    <li>
      <%= link_to articles_path do %>
        <i class="fas fa-backward"></i>
      <% end %>
    </li> 
</ul>
